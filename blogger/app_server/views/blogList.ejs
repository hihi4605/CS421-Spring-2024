<!DOCTYPE html>
<html>
<head>
    <title>Blog List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css"/>
    <style>
        .posted-date {
            font-size: smaller;
        }
        .blog-box {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a class="navbar-brand" href="/">My Blog</a>
        <a class="navbar-brand" href="/blog-list">List Blogs</a>
        <a class="navbar-brand" href="/blog-add">Add Blogs</a>
    </nav>
    <div class="container">
        <h1>Blog List</h1>
        <div class="row">
            <% if (Array.isArray(blogs) && blogs.length > 0) { %>
                <% blogs.forEach(function(blog) { %>
                    <div class="col-md-4 mb-4">
                        <div class="blog-box">
                            <h5 class="card-title"><%= blog.blogTitle %></h5>
                            <p><%= blog.blogEntry %></p>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="posted-date">Created On <%= new Date(blog.createdOn).toDateString() %></span>
                                <div>
                                    <a href="/blog-edit/<%= blog._id %>" class="btn btn-primary">Edit</a>
                                    <a href="/blog-delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No blogs found</p>
            <% } %>
        </div>
    </div>
</body>
</html>
