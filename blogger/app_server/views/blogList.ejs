<!DOCTYPE html>
<title>Blog List </title>
<link rel="stylesheet" href="/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css"/>
<body>
<nav class="navbar">
    <a class="navbar-brand" href="/">My Blog</a>
    <a class="navbar-brand" href="/blog-list">List Blogs</a>
    <a class="navbar-brand" href="/blog-add">Add Blogs</a>
</nav>
<div class="container">
    <h1>Blog List</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Entry</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% blogList.forEach(function(blog) { %>
                <tr>
                    <td><%= blog.blogTitle %></td>
                    <td><%= blog.blogEntry %></td>
                    <td>
                        <a href="/blog-edit/<%= blog._id %>"><i class="fas fa-edit"></i></a>
                        <a href="/blog-delete/<%= blog._id %>"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</html>
