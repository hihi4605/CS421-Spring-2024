<!DOCTYPE html>
<html>
<head>
    <title>Blog List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css"/>
    <style>
        .posted-date {
            font-size: 8px;
        }
        .blog-box {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">My Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/blog-list">List Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog-add">Add Blogs</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="mt-3">Blog List</h1>
        <div class="row">
            <% if (Array.isArray(blogs) && blogs.length > 0) { %>
                <% blogs.forEach(function(blog) { %>
                    <div class="col-md-4 mb-4">
                        <div class="blog-box">
                            <h5 class="card-title"><%= blog.blogTitle %></h5>
                            <p class="card-text"><%= blog.blogEntry %></p>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <small class="text-muted">Created On <%= new Date(blog.createdOn).toDateString() %></small>
                                <div>
                                    <a href="/blog-edit/<%=blog._id %>" class="btn btn-primary">Edit</a>
                                    <a href="/blog-delete/<%=blog._id %>" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No blogs found</p>
            <% } %>
        </div>
    </div>
</body>
</html>